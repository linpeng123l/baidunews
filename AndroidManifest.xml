<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linpeng.baidunewssearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

     <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:logo="@drawable/logo_actionbar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/newsDetails" >
        </activity>
        <activity
            android:name=".PostbarDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_postbar_details" >
        </activity>
    </application>

</manifest>
